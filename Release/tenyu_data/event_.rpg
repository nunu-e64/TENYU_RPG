@EVENT_BEGIN(map_move)
	@Anten(800)
	@Position_Set(me, [arg1], [arg2], [arg3])
	@Dir_Set(me, [arg4])
	@Meiten(800)
@EVENT_END


\--------------------------------------------------------
@EVENT_BEGIN(dir_move)
	@DIR_IF_BEGIN
	@DIR_CASE(right)
		@Position_Set(joker, +[arg1], 0, true)
	@DIR_CASE(left)
		@Position_Set(joker, -[arg1], 0, true) 
	@DIR_CASE(up)
		@Position_Set(joker, 0, -[arg1], true) 
	@DIR_CASE(down)
		@Position_Set(joker, 0, +[arg1], true)
	@DIR_IF_END
@EVENT_END

\--------------------------------------------------------
@EVENT_BEGIN(spin)
	@Dir_Set(joker,ORIGINAL-2)
	@Wait(100)
	@Dir_Set(joker,ORIGINAL-1)
	@Wait(100)
	@Dir_Set(joker,ORIGINAL)
	@Wait(100)
	@Dir_Set(joker,ORIGINAL+1)
	@Wait(100)
@EVENT_END
\--------------------------------------------------------
@EVENT_BEGIN(anten_long)
	@Anten(3000)
@EVENT_END
\--------------------------------------------------------

@EVENT_BEGIN(ice)
	@DIR_IF_BEGIN
		@DIR_CASE(right)
		@Slide(me, right, 1, [arg1]) 
		@DIR_CASE(left)
		@Slide(me, left, 1, [arg1]) 
		@DIR_CASE(up)
		@Slide(me, up, 1, [arg1]) 
		@DIR_CASE(down)
		@Slide(me, down, 1, [arg1]) 
	@DIR_IF_END
@EVENT_END

